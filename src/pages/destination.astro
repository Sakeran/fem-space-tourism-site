---
import Layout from "../layouts/layout.astro";

import data from "../data.json";
const moon = data.destinations[0];
---

<Layout title="Destination"> 
  <div class="grid-container grid-container--destination flow">

    <h1 class="numbered-title"><span aria-hidden="true">01</span> Pick your destination</h1>

    <picture>
      <source srcset={moon.images.webp} type="image/webp" />
      <img src={moon.images.png} alt="the moon" />
    </picture>

    <div class="tab-list underline-indicators flex">
      <button aria-selected="true" class="uppercase ff-sans-cond fs-300 text-accent letter-spacing-2">Moon</button>
      <button aria-selected="false" class="uppercase ff-sans-cond fs-300 text-accent letter-spacing-2">Mars</button>
      <button aria-selected="false" class="uppercase ff-sans-cond fs-300 text-accent letter-spacing-2">Europa</button>
      <button aria-selected="false" class="uppercase ff-sans-cond fs-300 text-accent letter-spacing-2">Titan</button>
    </div>

    <article class="destination-info flow">
      <h2 class="fs-800 ff-serif uppercase">{moon.name}</h2>
      
      <p>
        {moon.description}
      </p>

      <div class="destination-meta flex">

        <div class="flow" style="--flow-space: 0.75rem">
          <h3 class="fs-300 text-accent ff-sans-cond uppercase letter-spacing-3">Avg. Distance</h3>
          <p class="uppercase ff-serif">{moon.distance}</p>
        </div>

        <div class="flow" style="--flow-space: 0.75rem">
          <h3 class="fs-300 text-accent ff-sans-cond uppercase letter-spacing-3">Est. Travel Time</h3>
          <p class="uppercase ff-serif">{moon.travel}</p>
        </div>

      </div>

    </article>
  </div>
</Layout>